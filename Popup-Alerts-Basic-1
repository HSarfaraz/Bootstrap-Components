<body>
<div class="container">
    <h2>Different Modals</h2>
    <!-- Trigger the modal with a button -->
    <button type="button" class="btn btn-info btn-md" data-toggle="modal" data-target="#myModal" id="infoModal">Info Modal</button>

    <button type="button" class="btn btn-success btn-md" data-toggle="modal" data-target="#myModal" id="successModal">Success Modal</button>

    <button type="button" class="btn btn-danger btn-md" data-toggle="modal" data-target="#myModal" id="errorModal">Error Modal</button>

    <button type="button" class="btn btn-warning btn-md" data-toggle="modal" data-target="#myModal" id="warningModal">Warning Modal</button>


    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog modal-sm">




            <div class="modal-content" id="modal-success-content" style="display:none">
                <div class="modal-header modal-custom-header modal-success-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <div><i class="fa fa-check-square fa-3x" aria-hidden="true"></i></div>
                    <h4>Success</h4>
                    <p>Form submitted successfully !</p>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-success btm-sm" data-dismiss="modal">Close</button>
                </div>

            </div>

            <div class="modal-content" id="modal-info-content" style="display:none">
                <div class="modal-header modal-custom-header modal-info-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <div><i class="fa fa-info-circle fa-3x" aria-hidden="true"></i></div>
                    <h4>Info !</h4>
                    <p>This info will be helpful !</p>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-info btm-sm" data-dismiss="modal">Close</button>
                </div>
            </div>

            <div class="modal-content" id="modal-warning-content" style="display:none">
                <div class="modal-header modal-custom-header modal-warning-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <div><i class="fa fa-warning fa-3x" aria-hidden="true"></i></div>
