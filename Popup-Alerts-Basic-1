<script>

    $(document).ready(function(){

        $("#infoModal").click(function(){
            $("#modal-info-content").css("display", "block");
            $("#modal-success-content, #modal-error-content, #modal-warning-content").css("display", "none");
        });

        $("#successModal").click(function(){
            $("#modal-success-content").css("display", "block");
            $("#modal-info-content, #modal-error-content, #modal-warning-content").css("display", "none");
        });

        $("#errorModal").click(function(){
            $("#modal-error-content").css("display", "block");
            $("#modal-success-content, #modal-info-content, #modal-warning-content").css("display", "none");
        });

        $("#warningModal").click(function(){
            $("#modal-warning-content").css("display", "block");
            $("#modal-success-content, #modal-error-content, #modal-info-content").css("display", "none");
        });
    })
    </script>
