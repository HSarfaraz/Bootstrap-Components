    }
    .modal-success-header {
        background-color: #3ABA6F;
        border-bottom: 1px solid #3ABA6F;
    }
    .modal-warning-header {
        background-color: #f0ad4e;
        border-bottom: 1px solid #f0ad4e;
    }

    .modal-info-header {
        background-color: #269abc;
        border-bottom: 1px solid #269abc;
    }

    .modal-error-header {
